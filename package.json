{
  "name": "pls5618-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "css:autoprefixer": "postcss -u autoprefixer -r dist/*.css",
    "css:scss": "sass --style=compressed ./src/scss:dist",
    "css:lint": "stylelint src/scss/*.scss  --custom-syntax postcss-scss",
    "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "build:html": "posthtml -c posthtml.json",
    "watch:html": "onchange \"src/*.html\" -- npm run build:html",
    "build:ico": "copyfiles -u 1 src/*.ico dist",
    "watch:ico": "onchange \"src/*.ico\" -- npm run build:ico",
    "build:images": "copyfiles -u 1 src/images/**/* dist",
    "watch:images": "onchange \"src/images\" -- npm run build:images",
    "build:js": "copyfiles -u 1 src/js/*.js dist",
    "watch:js": "onchange \"src/js\" -- npm run build:js",
    "serve": "browser-sync start --server \"dist\" --files \"dist\"",
    "watch": "run-p build serve watch:*",
    "build": "run-p build:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.9",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "^4.0.3",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "sass": "^1.49.11",
    "stylelint": "^14.6.1"
  }
}
